#!/usr/bin/env node

'use strict';
var appMonitor = require('../lib/app-monitor');


var testPath = process.argv[2] ? process.argv[2] : 'test';
var testsOnly = process.argv[3] && process.argv[3] === '--tests-only';
var watchPath = testsOnly ? testPath : '.';

appMonitor.watchDirectoryAndRunTestsOnChanges(watchPath, testPath, 'lab');
appMonitor.watchReportAndReloadBrowserOnChanges();
